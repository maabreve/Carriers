<!DOCTYPE html>
<html ng-app="mainApp" ng-cloak>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Axado - Carriers App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="work-spinner text-center">
        <div class="work-spinner-bg">
            <img src="~/Content/images/ajax-loader.gif" />
            <br />
            <h4>Processando...</h4>
        </div>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Carriers App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <ui-view></ui-view>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Carriers App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


    <!--vendor-->
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="~/Scripts/angular-ui-router.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/Scripts/angular-messages.min.js"></script>
    <script src="~/Scripts/angular-sanitize.min.js"></script>
    <script src="~/Scripts/toaster/toaster.min.js"></script>
    <script src="~/Scripts/pagination/dirPagination.js"></script>
    
    <!--common-->
    <script src="~/app/common/common.js"></script>
    <script src="~/app/common/services/formEncode.js"></script>
    <script src="~/app/common/services/requestCounter.js"></script>
    <script src="~/app/common/directives/workSpinner.js"></script>
    <script src="~/app/common/services/log.js"></script>
    <script src="~/app/common/services/exceptionHandler.js"></script>
    <script src="~/app/common/services/globals.js"></script>

    <!--main-->
    <script src="~/app/main/mainApp.js"></script>
    
    <script src="~/app/main/services/carriersService.js"></script>
    <script src="~/app/main/services/accountService.js"></script>

    <script src="~/app/main/controllers/carriersListController.js"></script>
    <script src="~/app/main/controllers/carriersEditController.js"></script>
    <script src="~/app/main/controllers/carriersDeleteController.js"></script>
</body>
</html>
